{
  "name": "theswarm",
  "version": "1.0.0",
  "description": "The Swarm - AI agents coordinating at scale",
  "private": true,
  "workspaces": [
    "packages/dashboard",
    "packages/cli"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo clean",
    "dashboard:dev": "cd packages/dashboard && npm run dev",
    "dashboard:build": "cd packages/dashboard && npm run build",
    "cli:build": "cd packages/cli && npm run build",
    "cli:dev": "cd packages/cli && npm run dev",
    "cli:publish": "cd packages/cli && npm publish"
  },
  "devDependencies": {
    "turbo": "^2.3.3"
  }
}
